<script type="text/javascript" src="<%= base_path %>/js/index.js"></script>
<div id="container" class="container">
  <div id="codearea">
    <div id="code" class="code"></div>
    <div id="cursor"></div>
  </div>
  <div id="right_pane">
    <div id="stats">
